@model EmprestimosModel
@{
    ViewData["title"] = "Editar Emprestimo";
}

<div class=" conteiner bg-dark p-5 rounded-5 ">

    <div class=" mb-5 text-center">
        <h1 class="text-light">Edicao de Emprestimos</h1>

    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Editar">
        <input type="hidden" asp-for="Id"/>   
        
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            <input type="Text" class="form-control" asp-for="Recebedor" id="Recebdor" placeholder="quem esta recebendo o livro?">
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="fonecedor" placeholder="quem esta emprestando o livro?">
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="qual e o livro que esta sendo emprestado?">
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">

  <button type="submit" class="btn btn-success w-50">Editar</button>
            <a class="btn btn-primary w-50w" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
    </form>

</div>


